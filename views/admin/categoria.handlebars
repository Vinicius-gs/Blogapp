 <h2>Lista de categoria</h2>
<hr>
<a href="/admin/categoria/add"><button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{this.nome}}</h4>
            <small>Slug: {{this.slug}}</small> </br>
            <small>Data de Criação: {{data}}</small> <br>
            <a href="/admin/categoria/edit/{{_id}}"><button class="btn btn-success">Editar </button></a>
            <form action="/admin/categoria/deletar" method="post">
                <button type="submit" class="btn btn-danger mt-2" name="id" value="{{_id}}" >Deletar</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-4">Nenhuma categoria registrada!</h4>
{{/each}}