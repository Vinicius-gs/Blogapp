{{#each erros}}
    <div class= "alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Nova Postagem</h3>
<div class="card">
  <div class="card-body">
    <form action="/admin/postagem/nova" method="post">
            <label for="titulo">Titulo: </label>
                <input type="text" id="titulo" name="titulo" placeholder="Titulo" class="form-control" required><br>
            <label for="slug">Slug: </label>
                <input type="text" id="slug" name="slug" placeholder="Slug" class="form-control" required> <br>
            <label for="descricao">Descrição:</label>
                <input type="text" name="descricao" placeholder="Descricao"  class="form-control" required>
            <label for="conteudo">Conteudo</label>
                <textarea name="conteudo"class="form-control" placeholder="Conteudo" required></textarea>
            <label for="categoria">Categoria:</label>
                <select name="categoria" class="custom-select">
                    {{#each categoria}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Não há categoria cadastrada</option>
                    {{/each}}
                </select>
            <button type="submit" class="btn btn-success mt-2" >Criar Postagem</button>
        </form>
  </div>
</div>